<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/colorBackground"
    android:orientation="vertical">

    <com.nirbhay.autoplayvideo.CustomRecyclerView
        android:id="@+id/rv_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"



        android:layout_alignParentBottom="true"


        android:orientation="horizontal"
        android:weightSum="5">


        <LinearLayout
            android:id="@+id/homebottomtab"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"

            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/loginId1122"
                android:layout_width="30dp"
                android:layout_height="30dp"


                android:src="@drawable/home" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/walletbottomtab"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/search"
                android:layout_width="30dp"
                android:layout_height="30dp"


                android:src="@drawable/search" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/upl"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/uploads"
                android:layout_width="30dp"
                android:layout_height="30dp"


                android:src="@drawable/uplds" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/notify"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/loginId111"
                android:layout_width="30dp"
                android:layout_height="30dp"


                android:src="@drawable/message" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/protabbottom"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/loginId11"
                android:layout_width="30dp"
                android:layout_height="30dp"


                android:src="@drawable/user" />


        </LinearLayout>
    </LinearLayout>
</RelativeLayout>

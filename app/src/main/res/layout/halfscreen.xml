<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#00000000"
    android:layout_height="match_parent">

<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#00000000"
    android:layout_weight="1.4"></LinearLayout>
    <LinearLayout
        android:id="@+id/lay1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:background="@drawable/halfscreenradius"
        android:layout_weight="0.6">
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#00000000"
    android:orientation="vertical"
    android:weightSum="2">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_weight="1.2"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_height="fill_parent">
<TextView
    android:id="@+id/txt1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textStyle="bold"
    android:gravity="center"
    android:background="#00000000"
    android:textSize="16dp"
    android:textColor="#000"
    android:text="You need a TikTok  \n account to continue"/>
        <TextView
            android:id="@+id/singUpfrom"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:gravity="center"


            android:background="#e20909"
            android:layout_marginTop="14dp"
            android:text="Sign Up With Phone or Email"
            android:textColor="#fff"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:weightSum="2"
        android:orientation="horizontal"
        android:paddingLeft="30dp"

        android:paddingRight="30dp"

        android:layout_height="20dp">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#00000000"
            android:gravity="center"
            android:layout_weight="1">
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#9c9b9b"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:text="OR"/>
        <LinearLayout
            android:layout_width="fill_parent"
            android:background="#00000000"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:layout_weight="1">
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#9c9b9b"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_weight="0.8"
        android:orientation="vertical"
        android:background="#00000000"
        android:weightSum="2"
        android:layout_height="fill_parent">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:background="#00000000"
            android:layout_weight="0.3">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
android:background="#00000000"
                android:src="@drawable/google_plus"/>
            <TextView
                android:id="@+id/txt11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:textColor="#000"
                android:text="By signing up you cnfirm that you \n agree to our Terms of Use and have \n read and understood our privacy policy"/>
        </LinearLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#999999"/>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:background="#00000000"
            android:orientation="horizontal"

            android:layout_weight="1.7">
            <TextView
                android:id="@+id/txtt111"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:gravity="center"
                android:background="#00000000"
                android:textColor="#000"
                android:textSize="16dp"
                android:text="Already have an account?"/>
            <TextView
                android:id="@+id/txtt222"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="#df1414"
                android:textSize="16dp"
                android:text="Log in"/>
        </LinearLayout>


    </LinearLayout>
</LinearLayout>
    </LinearLayout>
</LinearLayout>

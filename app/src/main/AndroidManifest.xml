<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.nirbhay.autoplayvideosample">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-feature android:name="android.hardware.camera" android:required="true" />

    <!--OPTIONAL for storing in local storage-->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:name="com.nirbhay.autoplayvideosample.activity.AppController"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">

        <activity android:name="com.nirbhay.autoplayvideosample.activity.MainActivity"
            android:theme="@style/AppTheme"
           >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.nirbhay.autoplayvideosample.activity.HalfVisibleActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden"
            android:theme="@style/Theme.AppCompat.Translucent"/>
        <activity
            android:name="com.nirbhay.autoplayvideosample.activity.Signup"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden"
            android:theme="@style/AppTheme"/>
        <activity
            android:name="com.nirbhay.autoplayvideosample.activity.Login"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden"
            android:theme="@style/AppTheme"/>
        <activity
            android:name="com.nirbhay.autoplayvideosample.activity.OTP"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden"
            android:theme="@style/AppTheme"/>
        <activity
            android:name="com.nirbhay.autoplayvideosample.activity.Password"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden"
            android:theme="@style/AppTheme"/>
        <activity
            android:name="com.nirbhay.autoplayvideosample.activity.Profile"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden"
            android:theme="@style/AppTheme"/>
        <activity
            android:name="com.nirbhay.autoplayvideosample.activity.ProfileEditable"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden"
            android:theme="@style/AppTheme"/>
        <activity
            android:name="com.nirbhay.autoplayvideosample.activity.UploadRecordingActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden"
            android:theme="@style/AppTheme"/>
    </application>

</manifest>